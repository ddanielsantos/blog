---
interface Props {
  ogImageURL: string;
  href: string;
  title?: string;
}

const { ogImageURL, href, title } = Astro.props;
---

<!-- TWITTER -->
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content="ddaniel.me" />
<meta property="twitter:url" content={href} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={title ?? "now and"} />
<meta name="twitter:image" content={ogImageURL} />
