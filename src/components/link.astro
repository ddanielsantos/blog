---
import { twMerge } from "tailwind-merge";
interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
    href: string;
    arrow?: boolean;
}

const { href, arrow, class: c, target } = Astro.props;
---

<a
    href={href}
    class={twMerge(
        "border-[1px] border-gray-300 duration-500 focus:shadow-md hover:shadow-md shadow-gray-500 rounded-lg w-fit py-2 px-3 gap-2 transition-[box-shadow] no-underline dark:bg-zinc-900",
        c
    )}
    target={target ?? "_self"}
>
    <slot />
    {arrow && <span>&gt;</span>}
</a>
