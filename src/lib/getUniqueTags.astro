import type { MarkdownInstance } from "astro";
import type { PostCardProps } from "@types";

export function getUniqueTags(posts: MarkdownInstance<PostCardProps>[]) {
  const differentTags = new Set();

  posts?.forEach((post) => {
    post?.frontmatter?.tags?.forEach((tag) => differentTags.add(tag));
  });

  return [...differentTags];
}
